<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:ignore="NamespaceTypo"
    android:layout_marginTop="@dimen/_20sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recomiéndanos un lugar"
        android:textSize="@dimen/_15sdp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fotos"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="4dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_sitesdeils_phototoupload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                ads:srcCompat="@drawable/ic_add_24dp"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:id="@+id/img_addplace_imageseleted"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addplace_namesite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:textSize="@dimen/_12sdp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addplace_offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="¿Qué vende?"
                    android:textSize="@dimen/_12sdp"/>

            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_addplace_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_addplace_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Categoría"
                        android:textSize="@dimen/_12sdp"/>

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="choosseCategoriesDialog"/>

            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_addplace_seekbarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rango de precios"
                    android:textSize="@dimen/_12sdp"/>

                <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
                    android:id="@+id/rangeSeekbar_addplace_rangeprices"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    rsb:absoluteMaxValue="999.99"
                    rsb:absoluteMinValue="0.0" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_addplace_addresssite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addplace_addresssite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dirección"
                    android:textSize="@dimen/_12sdp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addplace_phonesite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefono"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="phone"/>

            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/btn_sitesdetails_createsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="55dp"
                android:text="Registrar Sitio"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>